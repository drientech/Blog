<%-include("../partials/adminHead") %>
<div class="container">
 
<div id="categoryedit" class="card mt-5">
  
<h3 class="card bg-dark text-white p-3 ">Edit a category</h3>
<form class="card-body"  action="/category/<%= category._id %>?_method=PUT" method="POST">
    
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="category[title]" value="<%= category.title %>">
    </div>
    <div class="form-group">
        <label for="">Image</label>
        <input type="text" class="form-control" name="category[image]" value="<%= category.image %>">
    </div>

    <button class="btn btn-dark">Submit</button>
</form>
 </div>
</div>

<%-include("../partials/adminFooter") %>