<%-include("../partials/adminHead") %>

<script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>

<div class="container card mt-5 p-0"> 
      <div class=" card bg-dark text-white p-3 "> <h3>   Edit   </h3>  </div>
      <form class="card-body" action="/blog/<%= blog.slug %>?_method=PUT " method="POST">
        <div class="form-group">
            <label >Title</label>
            <input type="text" class="form-control" name="blog[title]"  placeholder="Title" value="<%= blog.title %> " >
        </div>
       
        <div class="form-group">
            <label >Image</label>
            <input type="text"class="form-control" name="blog[image]"  value="<%= blog.image %> ">
        </div>
        <div class="form-group">
            <label >Description</label>
            <textarea name="blog[body]" class="form-control" cols="30" rows="10"> <%= blog.body %> </textarea>
        </div>
        
        <button class="btn btn-warning">Edit</button>
    </form>
</div>
<script>
    CKEDITOR.replace( 'blog[body]' );
</script>


<%-include("../partials/adminFooter") %>